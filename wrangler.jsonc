{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "moltbot-sandbox",
  "main": "src/index.ts",
  "compatibility_date": "2025-05-06",
  "compatibility_flags": ["nodejs_compat"],
  "observability": {
    "enabled": true,
  },
  // Static assets for admin UI (built by vite)
  "assets": {
    "directory": "./dist/client",
    "not_found_handling": "single-page-application",
    "html_handling": "auto-trailing-slash",
    "binding": "ASSETS",
    "run_worker_first": true,
  },
  // Allow importing HTML files as text modules and PNG files as binary
  "rules": [
    {
      "type": "Text",
      "globs": ["**/*.html"],
      "fallthrough": false,
    },
    {
      "type": "Data",
      "globs": ["**/*.png"],
      "fallthrough": false,
    },
  ],
  // Build command for vite
  "build": {
    "command": "npm run build",
  },
  // ─── ADDED: Cron triggers ─────────────────────────────────────────────────
  // ALL TIMES ARE UTC. AEST = UTC+10 | AEDT = UTC+11 (Oct–Apr daylight saving)
  //
  // ⚠️  Currently AEDT (UTC+11). DST ends first Sunday of April 2026.
  //     After DST ends, update to AEST offsets (comments show AEST values).
  "triggers": {
    "crons": [
      "0 4 * * 4",    // Thursday 3:00 PM AEDT  → Strategic Buffer Brief   [AEST: "0 5 * * 4"]
      "23 23 * * 4",  // Friday   10:23 AM AEDT  → Last Call                [AEST: "0 0 * * 5"]
      "23 21 * * *",  // Daily    8:23 AM AEDT   → Morning Heartbeat        [AEST: "23 22 * * *"]
      "0 6 * * *",    // Daily    5:00 PM AEDT   → Evening Heartbeat        [AEST: "0 7 * * *"]
    ],
  },
  // ─── ADDED: KV Namespace ──────────────────────────────────────────────────
  // Used for atomic task ID counter and small runtime state flags.
  // To get the ID: npx wrangler kv namespace list
  "kv_namespaces": [
    {
      "binding": "MRPASTA_KV",
      "id": "5579eca4f4ae4d558fe3fff4f712add3",
    },
  ],
  // Container configuration for the Moltbot sandbox
  "containers": [
    {
      "class_name": "Sandbox",
      "image": "./Dockerfile",
      "instance_type": "standard-1",
      "max_instances": 1,
    },
  ],
  "durable_objects": {
    "bindings": [
      {
        "class_name": "Sandbox",
        "name": "Sandbox",
      },
    ],
  },
  "migrations": [
    {
      "new_sqlite_classes": ["Sandbox"],
      "tag": "v1",
    }
  ],
  // R2 bucket for persistent storage (moltbot data, conversations, etc.)
  "r2_buckets": [
    {
      "binding": "MOLTBOT_BUCKET",
      "bucket_name": "moltbot-data",
      "preview_bucket_name": "moltbot-data",
    },
  ],
  // Browser Rendering binding for CDP shim
  "browser": {
    "binding": "BROWSER",
  },
  // Secrets configured via `wrangler secret put`:
  //
  // AI Provider:
  // - ANTHROPIC_API_KEY: Direct Anthropic API key         ✅ already set
  // - OPENAI_API_KEY: Direct OpenAI API key
  // - CLOUDFLARE_AI_GATEWAY_API_KEY / CF_AI_GATEWAY_ACCOUNT_ID / CF_AI_GATEWAY_GATEWAY_ID
  // - AI_GATEWAY_API_KEY / AI_GATEWAY_BASE_URL (legacy)
  //
  // Authentication:
  // - MOLTBOT_GATEWAY_TOKEN                               ✅ already set
  // - CF_ACCESS_TEAM_DOMAIN                               ✅ already set
  // - CF_ACCESS_AUD                                       ✅ already set
  //
  // R2 storage:
  // - R2_ACCESS_KEY_ID                                    ✅ already set
  // - R2_SECRET_ACCESS_KEY                                ✅ already set
  // - CF_ACCOUNT_ID                                       ✅ already set
  // - R2_BUCKET_NAME                                      ✅ already set
  //
  // Container behaviour:
  // - SANDBOX_SLEEP_AFTER                                 ✅ already set (set to "30m")
  //
  // Chat channels (optional, add when needed):
  // - TELEGRAM_BOT_TOKEN, DISCORD_BOT_TOKEN, SLACK_BOT_TOKEN, SLACK_APP_TOKEN
  //
  // Browser automation (optional):
  // - CDP_SECRET, WORKER_URL
}
